#!/usr/bin/perl
use strict;
use 5.010;
use warnings;
use QVD::Admin4::CLI;

# Script intended to create and run an instance of the CLI.

my $app = QVD::Admin4::CLI->new();
if(@ARGV > 0) {
	$app->run( initialize => 1 );
} else {
	$app->run_interactive( initialize => 1 );
}

exit($app->exit_status());

__END__

=pod

=head1 PURPOSE

Script intended to create and run an instance of the CLI.

=cut
